{
  "name": "AOW-Pension-Service-Basic",
  "description": "Basic mapping for Dutch AOW (Algemene Ouderdomswet) pension service from iKnow CognitatieAnnotationExport",
  "version": "1.0.0",
  "createdDate": "2025-12-18T00:00:00.000Z",
  "xmlFormat": "CognitatieAnnotation",
  "author": "CPSV Editor Team",
  "notes": "Maps legal concepts from iKnow to CPSV-AP service structure. Focuses on retirement age requirements.",
  "mappings": {
    "service.identifier": {
      "source": "documents",
      "path": "id",
      "transform": {
        "type": "prefix",
        "value": "https://ttl.open-regels.nl/service/"
      }
    },
    "service.name": {
      "source": "documents",
      "path": "name",
      "transform": null
    },
    "service.description": {
      "source": "concepts",
      "path": "definition",
      "transform": null,
      "filter": {
        "field": "type",
        "value": "Rechtsbetrekking"
      }
    },
    "service.type": {
      "source": "documents",
      "path": "type",
      "transform": {
        "type": "custom",
        "mapping": {
          "Wet": "http://purl.org/adms/servicetype/LegalService"
        }
      }
    },
    "legal.title": {
      "source": "documents",
      "path": "name",
      "transform": null
    },
    "legal.url": {
      "source": "documents",
      "path": "url",
      "transform": null
    },
    "legal.identifier": {
      "source": "textAnnotations",
      "path": "juriconnect",
      "transform": {
        "type": "prefix",
        "value": "https://wetten.overheid.nl/"
      }
    },
    "legal.type": {
      "source": "documents",
      "path": "type",
      "transform": {
        "type": "custom",
        "mapping": {
          "Wet": "http://data.europa.eu/eli/ontology#LegalResource"
        }
      }
    },
    "rules.identifier": {
      "source": "concepts",
      "path": "id",
      "transform": {
        "type": "prefix",
        "value": "https://ttl.open-regels.nl/rule/"
      },
      "filter": {
        "field": "type",
        "value": "Variabele"
      }
    },
    "rules.name": {
      "source": "concepts",
      "path": "name",
      "transform": null,
      "filter": {
        "field": "type",
        "value": "Variabele"
      }
    },
    "rules.description": {
      "source": "concepts",
      "path": "definition",
      "transform": null,
      "filter": {
        "field": "type",
        "value": "Variabele"
      }
    },
    "rules.type": {
      "source": "concepts",
      "path": "type",
      "transform": {
        "type": "custom",
        "mapping": {
          "Variabele": "BusinessRule",
          "Voorwaarde": "EligibilityRule",
          "Rechtsfeit": "LegalFactRule"
        }
      }
    },
    "parameters.name": {
      "source": "concepts",
      "path": "name",
      "transform": null,
      "filter": {
        "field": "type",
        "value": "Rechtsfeit"
      }
    },
    "parameters.value": {
      "source": "textAnnotations",
      "path": "text",
      "transform": null,
      "linkedTo": "concept"
    },
    "parameters.datatype": {
      "source": "static",
      "value": "xsd:integer",
      "transform": null
    }
  }
}
